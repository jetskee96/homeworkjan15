        <div class="table-responsive">
          <table class="table">
            <tbody>
              <tr>
                <td><strong>Movie Title:</strong></td>
                  <td> <%= link_to @movie.title, movie_path(@movie) %></td>
              </tr>
              <tr>
                <td><strong>Genre:</strong></td>
                <td> <%= @location_linker.location %></td>
              </tr>
              <tr>
                <td><strong>Description:</strong></td>
                <td> <%= @location_linker.description %></td>
              </tr>
              <tr>
                <td><strong>Created by:</strong></td>
                 <td><%= @location_linker.user.email %></td> 
              </tr>
          
                   <tr>
                <td><strong>Number of votes</strong></td>
                     <td> <%= pluralize @location_linker.reputation_for(:votes).to_i, "votes" %></td>
              </tr>
            
              
              
              
            </tbody>
          </table>



