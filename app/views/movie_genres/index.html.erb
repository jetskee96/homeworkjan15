<h1>Listing movie_genres</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @movie_genres.each do |movie_genre| %>
      <tr>
        <td><%= movie_genre.title %></td>
        <td><%= movie_genre.description %></td>
        <td><%= link_to 'Show', movie_genre %></td>
        <td><%= link_to 'Edit', edit_movie_genre_path(movie_genre) %></td>
        <td><%= link_to 'Destroy', movie_genre, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

